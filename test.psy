print_zstr : func(zstr : u8? weak -> v0)
{
	count : u64 mut := 0;
	s : u8? mut := zstr;
	while([s] != 0)
	{
		count = (count + 1);
		s = (s # 1);
	}
	print_sstr(zstr, count);
};

main : func(args : program_args? -> s32)
{
	str ::= "hello world!";
	my_str : u8 mut[13];
	i : u64 mut;
	for i = 0; i < sizeof typeof my_str; i = (i + 1);
	{
		[my_str # i] = [str # i];
	}
	print_zstr(my_str # 0);
	return 0;
};
