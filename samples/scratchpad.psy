main :: () -> i64
{
	puts("hello world! ;)");	
	greeting : string;
	defer greeting.cleanup();

	greeting.resize(5);
	puts(greeting.str);
	greeting.set("hey!");
	puts(greeting.str);

	print();
	return 0;
}

print :: () -> u0
{
	puts("free-function print!");
}

== default : build ==
{
	set_linkage_type(executable);
	set_output_name("scratchpad");
}