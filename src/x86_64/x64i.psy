x64i_tag : enum
{
	.nop := 0;
	.mov := 1;
	.push := 2;
	.pop := 3;
	.cbw := 4;
	.cwde := 5;
	.cdqe := 6;
	.inc := 7;
	.dec := 8;
	.neg := 9;
	.not := 10;

	.leaq := 11;
	.add := 12;
	.sub := 13;
	.mul := 14;
	.imul := 15;
	.div := 16;
	.idiv := 17;
	.xor := 18;
	.or := 19;
	.and := 20;

	.shl := 21;
	.sar := 22;
	.shr := 23;
	
	.call := 24;
	.movss := 25;
	.jmp := 26; // jump unconditional
	.jz := 27; // jump if zero/equal
	.jnz := 28; // jump if not zero/equal
	.jl := 29; // jump if signed less (less)
	.jle := 30; // jump if signed less or equal
	.jg := 31; // jump if signed greater (greater)
	.jge := 32; // jump if signed greater or equal
	.jb := 33; // jump if signed less (below)
	.jbe := 34; // jump if signed less or equal
	.ja := 35; // jump if signed greater (above)
	.jae := 36; // jump if signed greater or equal
	.js := 37; // jump if sign bit set (i.e negativity)
	.jo := 38; // jump if overflow bit set (wrap-around is based so we ignore this)
	.test := 39;
	.cmp := 40;
	.sete := 41;
	.ret := 42;
};

x64i : struct
{
	tag : x64i_tag;
	operands : x64v mut[4];
};

x64i_operand_count : func(inst : x64i -> u64)
{
	i : u64 mut;
	for(i = 0; i < countof typeof(inst.operands); i = i + 1)
	{
		if([inst.operands # i].tag == zero)
		{
			return i;
		}
	}
	return i;
};
