impl_is_whitespace : func(char : u8 -> bool)
{
	if(char == 0x20) // ' '
	{
		return true;
	}
	if(char == 0x0c) // '\f'
	{
		return true;
	}
	if(char == 0x0a) // '\n'
	{
		return true;
	}
	if(char == 0x0d) // '\r'
	{
		return true;
	}
	if(char == 0x09) // '/t'
	{
		return true;
	}
	if(char == 0x0b) // '/v'
	{
		return true;
	}
	return false;
};

impl_starts_symbol : func(char : u8 -> bool)
{
	if(char >= 'a')
	{
		if(char <= 'z')
		{
			return true;
		}
	}
	if(char >= 'A')
	{
		if(char <= 'Z')
		{
			return true;
		}
	}
	if(char == '_')
	{
		return true;
	}
	return false;
};

impl_could_continue_symbol : func(ch : u8 -> bool)
{
	if(ch >= '0')
	{
		if(ch <= '9')
		{
			return true;
		}
	}
	if(ch == '_')
	{
		return true;
	}
	if(ch >= 'a')
	{
		if(ch <= 'z')
		{
			return true;
		}
	}
	if(ch >= 'A')
	{
		if(ch <= 'Z')
		{
			return true;
		}
	}
	return false;
};

impl_is_punctuation : func(ch : u8 -> bool)
{
	if(ch >= 'a')
	{
		if(ch <= 'z')
		{
			return false;
		}
	}
	if(ch >= 'A')
	{
		if(ch <= 'Z')
		{
			return false;
		}
	}
	if(ch >= '0')
	{
		if(ch <= '9')
		{
			return false;
		}
	}
	if(ch == '_')
	{
		return false;
	}
	return true;
};

