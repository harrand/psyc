comment_table_setup : func( -> v0)
{
	// the '/' char in main table will yield operator_fslash
	// we need to point that entry's next to the comment table
	slash_entry ::= (main_table.tbl) # 47;
	nexttbl ::= (slash_entry->next)@lex_table?;
	[(nexttbl->tbl) # 47] = lex_entry
	{
		.tag := lex_entry_tag.none;
		.data := zero;
		.metadata := zero;
		.next := (ref comment_table)@v0?;
	};

	i : u64 mut;
	for(i = 0;  i < 255;  i = i + 1)
	{
		[(comment_table.tbl) # i] = lex_entry
		{
			.tag := lex_entry_tag.none;
			.data := zero;
			.metadata := zero;
			.next := (ref comment_table)@v0?;
		};
	}
	[(comment_table.tbl) # 10] = lex_entry
	{
		.tag := lex_entry_tag.discard;
		.data := zero;
		.metadata := false;
		.next := zero;
	};
};

decimal_table_setup : func( -> v0)
{
	i : u64 mut;
	// if we see a '0', then it could either be a normal decimal number
	[(main_table.tbl) # 48] = lex_entry
	{
		.tag := lex_entry_tag.none;
		.data := zero;
		.metadata := zero;
		.next := (ref char0_pretable)@v0?;
	};
	for(i = 0;  i < 255;  i = i + 1)
	{
		[(char0_pretable.tbl) # i] = lex_entry
		{
			.tag := lex_entry_tag.none;
			.data := zero;
			.metadata := zero;
			.next := (ref decimal_table)@v0?;
		};
		if(impl_is_punctuation(i@u8))
		{
			[(char0_pretable.tbl) # i] = lex_entry
			{
				.tag := lex_entry_tag.success;
				.data := (lex_token.numeric_literal)@s64@u64;
				.metadata := true;
				.next := zero;
			};
		}
		if(impl_is_whitespace(i@u8))
		{
			[(char0_pretable.tbl) # i] = lex_entry
			{
				.tag := lex_entry_tag.success;
				.data := (lex_token.numeric_literal)@s64@u64;
				.metadata := true;
				.next := zero;
			};
		}
	}
	[(char0_pretable.tbl) # 46] = lex_entry
	{
		.tag := lex_entry_tag.none;
		.data := zero;
		.metadata := zero;
		.next := (ref decimal_table)@v0?;
	};
	// or its directly followed by 'x' in which case we pivot the hex table
	[(char0_pretable.tbl) # 120] = lex_entry
	{
		.tag := lex_entry_tag.none;
		.data := zero;
		.metadata := zero;
		.next := (ref hex_table)@v0?;
	};
	// same for 'b'
	[(char0_pretable.tbl) # 98] = lex_entry
	{
		.tag := lex_entry_tag.none;
		.data := zero;
		.metadata := zero;
		.next := (ref binary_table)@v0?;
	};

	for(i = '1';  i <= '9';  i = i + 1)
	{
		[(main_table.tbl) # i] = lex_entry
		{
			.tag := lex_entry_tag.none;
			.data := zero;
			.metadata := zero;
			.next := (ref decimal_table)@v0?;
		};
	}

	for(i = 0;  i < 255;  i = i + 1)
	{
		if(impl_is_whitespace(i@u8))
		{
			[(decimal_table.tbl) # i] = lex_entry
			{
				.tag := lex_entry_tag.success;
				.data := (lex_token.numeric_literal)@s64@u64;
				.metadata := true;
				.next := zero;
			};
		}
		if(impl_is_punctuation(i@u8))
		{
			[(decimal_table.tbl) # i] = lex_entry
			{
				.tag := lex_entry_tag.success;
				.data := (lex_token.numeric_literal)@s64@u64;
				.metadata := true;
				.next := zero;
			};
		}
	}
	for(i = '0';  i <= '9';  i = i + 1)
	{
		[(decimal_table.tbl) # i] = lex_entry
		{
			.tag := lex_entry_tag.none;
			.data := zero;
			.metadata := zero;
			.next := (ref decimal_table)@v0?;
		};
	}
	[(decimal_table.tbl) # 46] = lex_entry
	{
		.tag := lex_entry_tag.none;
		.data := zero;
		.metadata := zero;
		.next := (ref decimal_table)@v0?;
	};
};

