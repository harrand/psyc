td_print : func(s : lex_state?, tok : token_data -> v0)
{
	slice ::= tok.lexeme;
	putzstr("__enumname(tok.tok)");
	putchar(' ');
	lexeme_data ::= (s->src) # (slice.off);
	j : u64 mut;
	for(j = 0;  j < (slice.len);  j = j + 1)
	{
		putchar([lexeme_data # j]);
	}
	putchar(' ');
	print_srcloc(tok.begin);
	putchar(10);
};

