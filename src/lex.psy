lex_entry_tag : enum
{
	.none := 1;
	// data is the token type you have just found.
	.success := 2;
	// forget what you're doing, dont backtrack and start again (you've lexed a comment most likely)
	.discard := 3;
};

lex_entry : struct
{
	tag : lex_entry_tag;
	data : u64;
	metadata : u64 weak;
	next : v0?;
};

lex_table : struct
{
	tbl : lex_entry mut[255];
};

main_table : lex_table mut := zero;
symbol_continuation_table : lex_table mut := zero;
string_literal_table : lex_table mut := zero;
char_literal_table : lex_table mut := zero;
decimal_table : lex_table mut := zero;
char0_pretable : lex_table mut := zero;
hex_table : lex_table mut := zero;
binary_table : lex_table mut := zero;
precomment_table : lex_table mut := zero;
comment_table : lex_table mut := zero;

main_table_setup : func(t : lex_table mut? -> v0)
{
	i : u64 mut;
	for(i = 0;  i < 255;  i = i + 1)
	{
		if(impl_starts_symbol(i@u8))
		{
			[(t->tbl) # i] = lex_entry
			{
				.tag := lex_entry_tag.none;
				.data := zero;
				.metadata := zero;
				.next := (ref symbol_continuation_table)@v0?;
			};
		}
		if(impl_is_whitespace(i@u8))
		{
			[(t->tbl) # i] = lex_entry
			{
				.tag := lex_entry_tag.discard;
				.data := zero;
				.metadata := zero;
				.next := zero;
			};
		}
	}
};

symbol_continuation_setup : func(t : lex_table mut? -> v0)
{
	i : u64 mut;
	for(i = 0;  i < 255;  i = i + 1)
	{
		ent ::= (t->tbl) # i;
		if(impl_is_whitespace(i@u8))
		{
			[(t->tbl) # i] = lex_entry
			{
				.tag := lex_entry_tag.success;
				.data := (lex_token.symbol)@s64@u64;
				.metadata := true;
				.next := ent->next;
			};
		}
		if(impl_is_punctuation(i@u8))
		{
			[(t->tbl) # i] = lex_entry
			{
				.tag := lex_entry_tag.success;
				.data := (lex_token.symbol)@s64@u64;
				.metadata := true;
				.next := ent->next;
			};
		}
		if(impl_could_continue_symbol(i@u8))
		{
			[(t->tbl) # i] = lex_entry
			{
				.tag := lex_entry_tag.none;
				.data := zero;
				.metadata := zero;
				.next := (ref symbol_continuation_table)@v0?;
			};
		}
	}
};

