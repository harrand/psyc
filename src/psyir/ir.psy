ir_new_qreg : func(-> psyir_val)
{
	fn ::= ir_current_function();
	num ::= fn->regcur;
	fn->regcur = (fn->regcur + 1);
	return psyir_val
	{
		.tag := psyir_val_tag.r;
		.size := psyir_reg_size.q;
		.val := num@_;
	};
};

// instruction api
ir_stack : func(sz : psyir_val -> psyir_val)
{
	out ::= ir_new_qreg();
	ir_add_instruction(psyir_inst
	{
		.tag := psyir_inst_tag.stack;
		.operands := psyir_val[4]
		{
			.0 := out;
			.1 := sz;
			... := zero;
		};
		... := zero;
	});
	return out;
};

