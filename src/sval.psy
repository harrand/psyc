sval_tag ::= enum
{
	.val_undef := 1;
	.val_zero := 2;
	.literal := 3;
};

sval_literal_tag ::= alias ast_literal_type;
sval_literal ::= alias ast_literal_expr;

sval ::= struct
{
	type : ty;
	tag : sval_tag;
	literal : sval_literal;
};

sval_exists ::= func(v : sval) -> bool
{
	return (v.tag) != zero;
};

== build ==
{
	add_source_file("type.psy");
}
